<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cn.bank.dao.EmployeeDao">
    <resultMap id="employeeMap" type="com.cn.bank.model.Employee">
        <result column="id" property="id"/>
        <result column="employee_id" property="employeeId"/>
        <result column="bank_id" property="bankId"/>
        <result column="employee_name" property="employeeName"/>
        <result column="employee_duties" property="role"/>
        <result column="employee_id_card" property="identity"/>
        <result column="employee_work_date" property="workDate"/>
        <result column="employee_move_date" property="inDate"/>
        <result column="employee_work_deadlines" property="outDate"/>
        <result column="employee_address" property="address"/>
        <result column="employee_speciality" property="specialty"/>
        <result column="employee_income" property="inCome"/>
    </resultMap>
    <select id="queryEmployeeInfos" resultMap="employeeMap">
        SELECT * FROM employee_info;
    </select>
    <insert id="addEmployeeInfo" useGeneratedKeys="true" keyProperty="id" parameterType="com.cn.bank.model.Bank">
      insert into employee_info(employee_id,bank_id,employee_name,employee_duties,employee_id_card
                            ,employee_work_date,employee_move_date,employee_work_deadlines,employee_address
                            ,employee_speciality,employee_income)
      values(#{employeeId},#{bankId},#{employeeName},#{role},#{identity},
            #{workDate},#{inDate},#{outDate},#{address},#{specialty},#{inCome})
    </insert>
    <update id="editEmployeeInfo" parameterType="com.cn.bank.model.UpdateEmployeeInfo">
      update employee_info set ${filed}=#{value} where id=#{id}
    </update>
    <delete id="delEmployeeInfo" parameterType="com.cn.bank.model.UpdateEmployeeInfo">
        delete from employee_info where id=#{id}
    </delete>
</mapper>